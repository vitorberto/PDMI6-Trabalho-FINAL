             x:Class="PDMTPFINAL.MainPage">

    <StackLayout VerticalOptions="CenterAndExpand">
        <Button Text="Mercadorias"
                Clicked="Button_Clicked_Crud"
                CornerRadius="5"
                WidthRequest="150"
